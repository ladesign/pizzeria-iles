{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/*"],
      "~~/*": ["*"]
    },
    "types": ["node"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": false,
    "noEmit": true
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.config.js",
    "**/*.config.cjs",
    "**/*.config.mjs"
  ]
}
